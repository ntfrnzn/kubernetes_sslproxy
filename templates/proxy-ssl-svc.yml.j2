apiVersion: v1
kind: Service
metadata:
  labels:
    app: {{ service_name }}-sslproxy
  name: {{ service_name }}-sslproxy
  namespace: default
spec:
  ports:
  - name: http
    port: 80
    protocol: TCP
    targetPort: 80
  - name: https
    port: 443
    protocol: TCP
    targetPort: 443
  selector:
    app: {{ service_name }}-sslproxy
  sessionAffinity: None
  type: LoadBalancer
